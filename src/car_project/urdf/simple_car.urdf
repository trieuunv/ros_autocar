<?xml version="1.0"?>
<robot name="simple_car">
  <link name="base_link">
    <visual>
      <geometry><box size="0.5 0.3 0.15"/></geometry>
      <material name="blue"><color rgba="0 0 1 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.5 0.3 0.15"/></geometry>
    </collision>
    <inertial>
      <mass value="5.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <link name="base_scan">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
  </link>
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/><child link="base_scan"/><origin xyz="0.1 0 0.1"/>
  </joint>

  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <leftJoint>left_wheel_joint</leftJoint>
      <rightJoint>right_wheel_joint</rightJoint>
      <wheelSeparation>0.3</wheelSeparation>
      <wheelDiameter>0.2</wheelDiameter>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <robotBaseFrame>base_link</robotBaseFrame>
      <publishWheelTF>true</publishWheelTF>
    </plugin>
  </gazebo>
</robot>
