<?xml version="1.0"?>
<robot name="follower_car">
  <link name="base_link">
    <visual><geometry><box size="0.8 0.5 0.3"/></geometry><material name="red"><color rgba="1 0 0 1"/></material></visual>
    <collision><geometry><box size="0.8 0.5 0.3"/></geometry></collision>
    <inertial><mass value="1.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>

  <link name="f_l_w">
    <visual><geometry><cylinder length="0.1" radius="0.15"/></geometry><material name="black"/></visual>
    <collision><geometry><cylinder length="0.1" radius="0.15"/></geometry></collision>
    <inertial><mass value="0.2"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/></inertial>
  </link>
  <joint name="f_j_l" type="continuous">
    <parent link="base_link"/><child link="f_l_w"/><origin xyz="0.2 0.3 -0.1" rpy="-1.5708 0 0"/><axis xyz="0 0 1"/>
  </joint>

  <link name="f_r_w">
    <visual><geometry><cylinder length="0.1" radius="0.15"/></geometry><material name="black"/></visual>
    <collision><geometry><cylinder length="0.1" radius="0.15"/></geometry></collision>
    <inertial><mass value="0.2"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/></inertial>
  </link>
  <joint name="f_j_r" type="continuous">
    <parent link="base_link"/><child link="f_r_w"/><origin xyz="0.2 -0.3 -0.1" rpy="-1.5708 0 0"/><axis xyz="0 0 1"/>
  </joint>

  <link name="f_c">
    <visual>
      <geometry><sphere radius="0.05"/></geometry>
      <material name="white"><color rgba="1 1 1 1"/></material>
    </visual>
    <collision><geometry><sphere radius="0.05"/></geometry></collision>
    <inertial><mass value="0.1"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>

  <joint name="f_j_c" type="fixed">
    <parent link="base_link"/><child link="f_c"/>
    <origin xyz="-0.3 0 -0.2"/> 
  </joint>

  <gazebo reference="f_c">
    <mu1 value="0.001"/><mu2 value="0.001"/>
  </gazebo>

  <link name="base_scan">
    <visual><geometry><box size="0.1 0.1 0.1"/></geometry><material name="black"><color rgba="0 0 0 1"/></material></visual>
  </link>
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/><child link="base_scan"/><origin xyz="0.4 0 0"/>
  </joint>

  <gazebo reference="base_scan">
    <sensor type="ray" name="laser">
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan><horizontal><samples>180</samples><min_angle>-1.57</min_angle><max_angle>1.57</max_angle></horizontal></scan>
        <range><min>0.1</min><max>10.0</max></range>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
        <topicName>scan</topicName><frameName>base_scan</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <robotNamespace>/</robotNamespace>
      <leftJoint>f_j_l</leftJoint><rightJoint>f_j_r</rightJoint>
      <wheelSeparation>0.6</wheelSeparation><wheelDiameter>0.3</wheelDiameter>
      <commandTopic>follower/cmd_vel</commandTopic>
      <odometryTopic>follower/odom</odometryTopic>
      <robotBaseFrame>base_link</robotBaseFrame>
      <wheelTorque>50</wheelTorque> 
    </plugin>
  </gazebo>
</robot>
